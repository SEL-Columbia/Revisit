<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dip" >
    
    <ImageView
        android:id="@+id/facility_type_icon"
        android:layout_width="40dip"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dip"
        android:contentDescription="@string/facility_icon_desc"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/facility_list_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/facility_type_icon"
        android:gravity="center_vertical"
        android:textSize="14sp" />
    
    <TextView
        android:id="@+id/facility_list_item_description"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/facility_type_icon"
        android:layout_below="@id/facility_list_item_title"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="10sp" />

    <!-- <TextView
        android:id="@+id/facility_list_created"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/facility_type_icon"
        android:layout_below="@id/facility_list_item_description"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="12sp" /> -->
    
</RelativeLayout>