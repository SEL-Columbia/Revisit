<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center"
        android:text="@string/splash_welcome"
        android:textSize="24sp" />

    <Button
        android:id="@+id/select_offline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_weight="2"
        android:paddingBottom="5dp"
        android:background="@drawable/blue_button"
        android:drawableTop="@drawable/ic_download_offline_map"
        android:text="@string/select_offline_button"
        android:textSize="12sp" />

    <Button
        android:id="@+id/map_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_weight="2"
        android:paddingBottom="5dp"
        android:background="@drawable/green_button"
        android:drawableTop="@drawable/ic_download_offline_map"
        android:text="@string/view_offline_button"
        android:textSize="12sp" />

    <Button
        android:id="@+id/sync_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_weight="2"
        android:paddingBottom="5dp"
        android:background="@drawable/orange_button"
        android:drawableTop="@drawable/ic_sync_sites"
        android:text="@string/sync_sites_button"
        android:textSize="12sp" />

    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_weight="2"
        android:paddingBottom="5dp"
        android:background="@drawable/purple_button"
        android:drawableTop="@drawable/ic_settings"
        android:text="@string/settings_button"
        android:textSize="12sp" />

</LinearLayout>